<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:padding="5dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/relative_dongcd"
        android:layout_width="wrap_content"
        android:background="@drawable/bg_dongcd"
        android:padding="5dp"
        android:layout_height="100dp">

        <ImageView
            android:id="@+id/img_dongCD"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/cd_thethao_2"
            android:layout_alignParentLeft="true"/>

        <TextView
            android:id="@+id/tv_TenChuDe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#d06713"
            android:textStyle="bold"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/img_dongCD"
            android:layout_above="@id/progressbar_dongCD"
            android:textSize="20dp"
            android:text="Truy Tìm Bài Hát"/>
        <ProgressBar
            android:id="@+id/progressbar_dongCD"
            android:layout_toRightOf="@id/img_dongCD"
            android:layout_centerVertical="true"
            android:layout_margin="10dp"
            android:padding="2dp"
            android:background="@drawable/bg_progressbar"
            style="@android:style/Widget.ProgressBar.Horizontal"
            android:progress="3"
            android:max="50"
            android:layout_width="match_parent"
            android:layout_height="15dp" />
        <TextView
            android:id="@+id/text_level"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#d06713"
            android:textStyle="bold"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/img_dongCD"
            android:layout_below="@id/progressbar_dongCD"
            android:textSize="18dp"
            android:text="Level:"/>
        <TextView
            android:id="@+id/tv_Level"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#d06713"
            android:textStyle="bold"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/text_level"
            android:layout_below="@id/progressbar_dongCD"
            android:textSize="18dp"
            android:text="3/50"/>

    </RelativeLayout>
</LinearLayout>