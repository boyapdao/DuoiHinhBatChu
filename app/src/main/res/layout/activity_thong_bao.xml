<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ThongBaoActivity">



    <TextView
        android:layout_marginTop="30dp"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CHÚC MỪNG"
        android:textStyle="bold"
        android:textSize="35dp"
        android:textColor="#d50100"/>
    <TextView
        android:layout_marginTop="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:layout_gravity="center"
        android:text="Bạn đã tìm ra đáp án:"
        android:textColor="#c10d0d"/>
    <TextView
        android:id="@+id/tv_DapAnCoDau"
        android:layout_marginTop="25dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="KINH ĐỘ"
        android:layout_gravity="center"
        android:textColor="#fff"
        android:textSize="30dp"
        android:background="#d81a60"/>
    <ImageView
        android:id="@+id/img_gif"
        android:layout_marginTop="30dp"
        android:layout_gravity="center"
        android:layout_width="300dp"
        android:layout_height="300dp"/>
    <Button
        android:id="@+id/btn_tieptuc"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_tieptuc"
        android:textColor="#fff"
        android:textSize="20dp"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:text="TIẾP TỤC"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:textColor="#d92319"
        android:textSize="20dp"
        android:text="Bạn được tặng +10 ruby"/>

</LinearLayout>